@model IEnumerable<CrowdfundingPlatform.Models.Project>

@{
    ViewBag.Title = "Проекты";
}

<div class="create center">

    <h2>Проекты</h2>
    @if (Request.IsAuthenticated)
    {
        <div class="div_input font_label">
            @Html.ActionLink("Создать проект", "Create")
        </div>
    }
</div>

    <table class="content-wrapper table  center">
        <tbody>
            <tr class="font_label">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateStarted)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deadline)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredAmount)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CurrentAmount)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateStarted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deadline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequiredAmount)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.CurrentAmount)
                    </th>

                    <td>
                        @if (item.Owner == User.Identity.Name)
                        {
                            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })
                             
                        }

                            @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                      
</td>
                </tr>
            }
        </tbody>

    </table>
